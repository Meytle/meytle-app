{
  "name": "meytle-app",
  "version": "1.0.0",
  "private": true,
  "description": "Meytle - Social companion platform monorepo",
  "author": "Meytle Team",
  "license": "PRIVATE",
  "workspaces": [
    "backend",
    "frontend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "npm run build:shared && npm run build:frontend",
    "build:shared": "npm run build --workspace=shared",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "start": "npm start --workspace=backend",
    "start:backend": "npm start --workspace=backend",
    "start:frontend": "npm run preview --workspace=frontend",
    "install:all": "npm install",
    "clean": "npm run clean:all",
    "clean:all": "rm -rf node_modules backend/node_modules frontend/node_modules shared/node_modules",
    "clean:build": "rm -rf backend/dist frontend/dist shared/dist",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "npm test --workspace=backend --if-present",
    "test:frontend": "npm test --workspace=frontend --if-present",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "npm run lint --workspace=backend --if-present",
    "lint:frontend": "npm run lint --workspace=frontend --if-present",
    "railway:build": "npm install && npm run build",
    "railway:start": "npm start --workspace=backend"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Meytle/meytle-app.git"
  }
}
